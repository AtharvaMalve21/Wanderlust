<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= data.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%= data.image %>" class="card-img-top show-img" alt="..." />
    <div class="card-body">
      <%= data.description %> <br />
      &#8377; <%= data.price.toLocaleString("en-IN") %> <br />
      <%= data.location %> <br />
      <%= data.country %>
    </div>
  </div>
  <div></div>
  <div class="col-2 offset-3 mb-2 btns">
    <a href="/listings/<%= data._id %>/edit" class="btn btn-warning mb-2"
      >Edit</a
    >
    <form action="/listings/<%= data._id %>?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-dark">Delete</button>
    </form>
  </div>

  <div class="col-8 offset-3 mb-3">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= data._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          class="form-range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment">Comment</label>
        <textarea
          required
          class="form-control"
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of data.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">RahulKumar</h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> â˜…</p>
        </div>
        <form action="/listings/<%= data._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="post">
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>
